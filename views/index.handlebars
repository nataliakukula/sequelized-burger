{{!-- Logo --}}
<div class="row">
    <div class="col-12">
        <img src="/assets/img/cat_burger.png" alt="cat burger">
    </div>
</div>
{{!-- Title --}}
<div class="row">
    <div class="col-12">
        <h1>Eat-Da-Burger!</h1>
    </div>
</div>
{{!-- Display --}}
<div class="row">
    <div id="not-devoured" class="col-6">
        <ul>
            {{#each burger}}
            {{#unless devoured}}
            <form id="customers">
                <div class="burgerito form-inline text-center">
                    <img src="/assets/img/burgerito.png" alt="Burgerito">
                    {{id}}. {{burger_name}}

                    <input type="text" class="form-control" id="customer" placeholder="Who will devoure me?">
                    <button type="submit" class="devoure btn btn-outline-dark" data-id="{{id}}">Devoure it!</button>
                </div>
            </form>
            {{/unless}}
            {{/each}}
        </ul>

    </div>
    <div class="devoured col-6">
        <ul>
            {{#each burger}}
            {{#if devoured}}
            <p class="burgeritoed">
                <img src="/assets/img/wallpaper.png" alt="Burgerito">
                {{id}}. {{burger_name}}
                <button type="submit" class="btn btn-outline-dark-block"> {{Customer.customer_name}} devoured it!!!</button>
            </p>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

{{!-- Form --}}
<form id="burgers">
    <div class="form-group">
        <input type="text" class="form-control" id="burger" placeholder="You gotta be kitting me!">
        <small class="form-text text-muted">Enter the burger you want to eat then click the "Submit"
            button.</small>
    </div>
    <button type="submit" class="btn btn-outline-dark">Submit</button>
</form>